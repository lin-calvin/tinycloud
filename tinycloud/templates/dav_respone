<?xml version="1.0" encoding="UTF-8"?>
<D:multistatus
    xmlns:D="DAV:">
	{% for file in files %}
            <D:response>
                <D:href>{{ normpath(url_prefix+"/"+file["path"]) }}</D:href>
                <D:propstat>
                    <D:prop>
                    {% if  file["type"]=="file" %}
                        <D:getcontentlength>{{ file["size"] }}</D:getcontentlength>
                        <D:getcontenttype>{{guess_type(file["name"])[0] or "application/octet-stream"}}</D:getcontenttype>
                    {% else %}
    			 <D:resourcetype>
                             <D:collection
                                xmlns:D="DAV:"/>
                            </D:resourcetype>          
                     {% endif %}          
                        <D:getlastmodified>{{file["time"]}}</D:getlastmodified>
                        <D:resourcetype></D:resourcetype>
                        <D:displayname>{{ file["name"] }}</D:displayname>
                    </D:prop>
                    <D:status>HTTP/1.1 200 OK</D:status>
                </D:propstat>
            </D:response>
	{% endfor %}
        </D:multistatus>
